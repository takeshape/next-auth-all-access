{
  "name": "@takeshape/next-auth-all-access",
  "version": "2.0.0-4",
  "keywords": [
    "react",
    "nodejs",
    "oauth",
    "jwt",
    "oauth2",
    "authentication",
    "nextjs",
    "oidc",
    "nextauth",
    "api",
    "jwks",
    "token"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takeshape/next-auth-all-access.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/next-auth/react/index.d.ts",
      "default": "./dist/next-auth/react/index.js"
    },
    "./v4": {
      "types": "./dist/next-auth/v4/index.d.ts",
      "default": "./dist/next-auth/v4/index.js"
    },
    "./v5": {
      "types": "./dist/next-auth/v5/index.d.ts",
      "default": "./dist/next-auth/v5/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "next-auth-all-access": "bin/next-auth-all-access.js"
  },
  "files": [
    "bin/next-auth-all-access.js",
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "ci": "vitest run",
    "clean": "del-cli dist *.tsbuildinfo",
    "format": "eslint src --fix",
    "prepare": "npm run build",
    "release": "np --no-publish",
    "test": "npm run format && npm run typecheck && vitest run",
    "typecheck": "tsc --noEmit",
    "watch": "vitest"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "extends": [
          "plugin:prettier/recommended"
        ]
      },
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "sourceType": "module"
        },
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "plugins": [
          "json-format"
        ]
      },
      {
        "files": [
          "*.mdx",
          "*.md"
        ],
        "settings": {
          "mdx/code-blocks": true,
          "mdx/language-mapper": {}
        },
        "extends": "plugin:mdx/recommended",
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "dist"
  ],
  "dependencies": {
    "jose": "^5.2.3",
    "meow": "^13.2.0"
  },
  "devDependencies": {
    "@auth/core": "^0.38.0",
    "@types/node": "^22.13.13",
    "@types/react": "^18.2.65",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "next": "^15.2.4",
    "next-auth": "^5.0.0-beta.25",
    "np": "10.2.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "type-fest": "^4.38.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "next-auth": "^4.22.1 || ^5 || ^5.0.0-beta",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "peerDependenciesMeta": {
    "next-auth": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
