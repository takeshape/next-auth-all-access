{
  "name": "@takeshape/next-auth-all-access",
  "version": "1.0.0",
  "keywords": [
    "react",
    "nodejs",
    "oauth",
    "jwt",
    "oauth2",
    "authentication",
    "nextjs",
    "oidc",
    "nextauth",
    "api",
    "jwks",
    "token"
  ],
  "repository": "takeshape/next-auth-all-access",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./react": "./dist/react/index.js"
  },
  "types": "./dist",
  "typesVersions": {
    "*": {
      "react": [
        "dist/react/index.d.ts"
      ]
    }
  },
  "bin": {
    "next-auth-all-access": "./bin/next-auth-all-access.js"
  },
  "files": [
    "bin/next-auth-all-access.js",
    "dist/react",
    "dist/handlers",
    "dist/index.d.ts",
    "dist/index.js",
    "dist/callbacks.d.ts",
    "dist/callbacks.js",
    "dist/key.d.ts",
    "dist/key.js",
    "dist/next-auth-all-access.d.ts",
    "dist/next-auth-all-access.js",
    "dist/token.d.ts",
    "dist/token.js",
    "dist/types.d.ts",
    "dist/types.js",
    "dist/utils.d.ts",
    "dist/utils.js"
  ],
  "scripts": {
    "build": "del-cli dist && tsc -p tsconfig.build.json",
    "ci": "vitest run",
    "format": "eslint src --fix",
    "prepare": "npm run build",
    "release": "np --no-publish",
    "test": "npm run format && npm run typecheck && vitest run",
    "typecheck": "tsc --noEmit",
    "watch": "vitest"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "extends": [
          "plugin:prettier/recommended"
        ]
      },
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "sourceType": "module"
        },
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "plugins": [
          "json-format"
        ]
      },
      {
        "files": [
          "*.mdx",
          "*.md"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": "plugin:mdx/recommended",
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "dist"
  ],
  "dependencies": {
    "jose": "^5.2.3",
    "meow": "^13.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.26",
    "@types/react": "^18.2.65",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "next": "^14.1.3",
    "next-auth": "^4.24.7",
    "np": "9.0.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "type-fest": "^4.12.0",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "next-auth": "^4.22.1",
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": "^16.13.0 || ^18.0.0 || ^20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
